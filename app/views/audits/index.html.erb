      <div class="list_titles">
        <h1><%= params[ :search ] ? 'Search results' : 'Audit trail' %></h1>
      </div>

<%=
  render (
    {
      :partial => 'shared/list',
      :locals  =>
      {
        :model          => 'audit',
        :columns        => @columns,
        :collection     => @audits,
        :actions_method => nil
      }
    }
  )
%>
      <h2>Find audit entries</h2>

      <% form_tag audits_path, :method => 'get' do %>
        <%= hidden_field_tag( 'sort',      params[ :sort      ] ) %>
        <%= hidden_field_tag( 'direction', params[ :direction ] ) %>
        <%= hidden_field_tag( 'entries',   params[ :entries   ] ) %>
        <% content_tag :label do %>
          Search user names ("Who?"), action names ("What?") and revision numbers (TBD - date ranges):
          <%= text_field_tag :search, params[ :search ] %>
          <%= submit_tag( 'Go', { :name => 'search_go' } ) %>
<% if ( params[ :search ] ) -%>
          <%= submit_tag( 'Clear', { :name => 'search_cancel' } ) %>
<% end -%>
        <% end %>
      <% end %>